<% layout('../layouts/main') %>

    <h3>Create new product</h3>
    <form method="POST" method="POST">
        <div class="form-group mb-2">
            <label>Name</label>
            <input name="name" type="text" required class="form-control" placeholder="Enter name of product">
        </div>
        <div class="form-group mb-2">
            <label>Description</label>
            <textarea name="description" class="form-control" cols="30" rows="10" placeholder="Enter description of product"></textarea>
        </div>
        <div class="form-group mb-2">
            <label>Expiration Period (days)</label>
            <input type="number" class="form-control" name="expirationPeriod" min="0" value="0" step="1">
        </div>
        <div class="form-group mb-2">
            <label>Price (UAH)</label>
            <input type="number" class="form-control" required name="price" min="0" value="0" step="0.1">
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>

    <a class="btn btn-dark mt-5" href="/products">Back to products list</a>
