<% layout('../layouts/main') %>

    <h3>Create new inventory</h3>
    <form method="POST">
        <div class="form-group mb-2">
            <label>Name</label>
            <input name="name" type="text" required class="form-control" placeholder="Enter name of inventory">
        </div>
        <div class="form-group mb-2">
            <label>Description</label>
            <textarea name="description" class="form-control" cols="30" rows="10" placeholder="Enter description of inventory"></textarea>
        </div>
        <div class="form-group mb-2">
            <label>Capacity</label>
            <input type="number" class="form-control" name="capacity" min="0" value="0" step="0.1">
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>